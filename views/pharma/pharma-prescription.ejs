<%- include('./navbar') %>
<div class="container-fluid ps-0">
    <div class="row w-100 p-0">
        <div class="col-2" id="side" style="height:91vh;">
            <%- include('./side') %>
        </div>
        <div class="col-10">
            <h4 class="mt-3 border-start border-4 px-2">Your Prescriptions</h4>
            <table class="table mt-4">
                <thead class="table-dark">
                  <tr>
                      <th>Patient Name</th>
                      <th>Medications</th>
                      <th>Instructions</th>
                      <th>Date</th>
                  </tr>
                </thead>
                <tbody>
                    <% patient.forEach(patient => { %>
                        <tr>
                            <td><%-patient.patientId.patientname %></td>
                            <td><%-patient.medications %></td>
                            <td><%-patient.instructions %></td>
                            <td><%-patient.date %></td>    
                        </tr>
                        <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>